<script src="~/assets/js/bootstrap-multiselect.js" type="text/javascript"></script>

<style type="text/css">
    .multiselect-container {
        width: 100% !important;
        border-radius: 1px !important;
      
    }

    .multiselect {
        height: 40px !important;
        text-align: left !important;
        background-color: revert;
        width: 100%;
       
    }
    .multiselect-selected-text {
    color:gray;
    }
    .top-buffer {
        margin-top: 3px;
    }
</style>
<script>
    $(document).ready(function () {
        $('a[href$="' + "/MasterSetting" + '"]').closest("li").addClass('active');
        $("#ddl_workcategory").attr('disabled', true);
        FunTest(0);
    })
    $(function () {
        $('#ddl_ProjectList').multiselect({
            includeSelectAllOption: true,
            buttonWidth: '100%'
        });
        $('#ddl_JobCategoryList').multiselect({
            includeSelectAllOption: true,
            buttonWidth: '100%'
        });
        $('#ddl_JobItemList').multiselect({
            includeSelectAllOption: true,
            buttonWidth: '100%'
        });
    });

    function FunTest(T) {
        
        if (T == "projectcode") {
            $("#lbldesc").text('Project Description :');
            $("#ddl_workcategory").attr('disabled', true);
            $("#ddl_ProjectFamily").attr('disabled', false);
            $("#ddl_Projectflow").attr('disabled', false);
            $('#datatableList1').show();
            $('#datatableList2').hide();
            $('#datatableList3').hide();
        } else if (T == "jobcategory") {
            $("#lbldesc").text('Job Category :');
            $("#ddl_ProjectFamily").attr('disabled', true);
            $("#ddl_Projectflow").attr('disabled', true);
            $("#ddl_workcategory").attr('disabled', false);
            $('#datatableList1').hide();
            $('#datatableList2').show();
            $('#datatableList3').hide();
        }
        else if (T == "jobitem") {
            $("#lbldesc").text('Job Item :');
            $("#ddl_ProjectFamily").attr('disabled', true);
            $("#ddl_Projectflow").attr('disabled', true);
            $("#ddl_workcategory").attr('disabled', false);
            $('#datatableList1').hide();
            $('#datatableList2').hide();
            $('#datatableList3').show();
        } else {
            $("#lbldesc").text('Project Description :');
            $("#ddl_ProjectFamily").attr('disabled', false);
            $("#ddl_Projectflow").attr('disabled', false);
            $("#ddl_workcategory").attr('disabled', true);
            $('#datatableList1').show();
            $('#datatableList2').hide();
            $('#datatableList3').hide();
        }

    }

</script>

