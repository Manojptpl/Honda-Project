
@{
    ViewBag.Title = "notificationssettings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ Html.RenderPartial("_SettingsMenu"); }
<script type="text/javascript">
    $(document).ready(function () {
        $('a[href$="' + "/notificationssettings" + '"]').closest("li").addClass('active');

        $('#btnreset').click(function () {
            $('#txttitle').val('');
            $('#txtMsg').val('');
        });
    });
</script>
 

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <form class="form-horizontal">
            <h4 class="page-title">Notifications Settings</h4>
            <div class="form-group">
                <label class="col-lg-3 control-label">Tittle</label>
                <div class="col-lg-9">
                    <input name="" class="form-control"  id="txttitle" placeholder="Enter Your Tittle" value="" type="text">
                </div>
            </div>
            
            <div class="form-group">
                <label class="col-lg-3 control-label"> Message</label>
                <div class="col-lg-9">
                    <textarea name="" class="form-control" id="txtMsg" rows="4" value="" placeholder="This textarea has a limit 500 chars"  ></textarea>                 
                </div>
                
            </div>
             
        </form>
    </div>
</div>
<div class="text-center m-t-20">
    <button class="btn btn-primary" type="button">Submit</button>
   
    <button type="button" id="btnreset" class="btn btn-primary">Reset</button>
</div>